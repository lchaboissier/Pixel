{{ form_start(form) }}
{{ form_errors(form) }}
<div class="card">
    <div class="card-body">
        {# {{ form_widget(form) }} #}

        <div class="row">
            <div class="col-md-8">
                {{ form_row(form.title) }}
                {{ form_row(form.releaseDate) }}
                {{ form_row(form.description) }}
            </div>

            <div class="col-md-4">
                {% if form.enabled is defined %}
                {{ form_row(form.enabled) }}
                {% endif %}
                {{ form_row(form.editor) }}
                {{ form_row(form.supports) }}
            </div>
        </div>

        <div class="d-flex justify-content-between">
            {% if entity.mainImage is not empty %}
            <img src="{{ asset(entity.mainImage.webPath) }}" alt="" width="200">
            {% endif %}

            <div class="flex-grow-1 ms-2">
                {{ form_row(form.mainImage.file) }}
                {{ form_row(form.deleteMainImage) }}
            </div>
        </div>
        
    </div>

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
</div>
{{ form_end(form) }}