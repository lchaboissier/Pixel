{% extends "back_layout.html.twig" %}

{% block title %}Détail du jeu{% endblock %}

{% block content %}
<h1>Détail du jeu "{{ entity.title }}"</h1>

{{ form_start(form) }} {# Début du formulaire #}
{{ form_errors(form) }}
<div class="card">
    <div class="card-body">
        {# Affiche le formulaire "from" #}
        {# {{ form(form) }} #}
        {{ form_widget(form) }}
    </div>

    <div class="card-footer">
        {# button:submit.btn.btn-primary #}
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
</div>
{{ form_end(form) }} {# Fin du formulaire #}
{% endblock %}