{% extends "back_layout.html.twig" %}

{% block content %}
<h1>Liste de jeux</h1>

<div class="card">
    <div class="card-header">
        <a href="{{ path('app_game_new') }}" class="btn btn-success">Ajouter un jeu</a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                     <tr>
                        <th>Titre</th>
                        <th>Description</th>
                         <th>Activ√©</th>
                         <th>Action</th>
                      </tr>
                 </thead>
                <tbody>
                    {% for entity in entities %}
                     <tr>
                        <td>{{entity.title}}</td>
                        <td>{{entity.Description}}</td>
                        <td>{{entity.enabled ? 'oui':'non'}}</td>
                        <td>
                            <a href="{{ path('app_game_edit', {"id": entity.id}) }}" class="btn btn-light">Modifier</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    <div>
</div>
                     
{% endblock %}