{% extends 'back_layout.html.twig' %}

{% block title %}Modification du support{% endblock %}

{% block content %}
<h1>Modifier le support "{{ support.nom }}"</h1>

{{ form_start(form) }}
{{ form_errors(form) }}
<div class="card">
    <div class="card-body">
        {# {{ form_widget(form) }} #}
        <div class="row">
            <div class="col-md-8">
                {{ form_row(form.nom) }}
                {{ form_row(form.dateSortie) }}
                {{ form_row(form.description) }}
                {{ form_row(form.constructeur) }}
            </div>

            <div class="d-flex-justify-content-between">
                {% if support.mainImage is not empty %}
                <img src="{{ asset(support.mainImage.webPath) }}" alt="" width="200">
                {% endif %}
            </div>

            <div class="flex-grow-1 ms-2">
                {{ form_row(form.mainImage.file) }}
                {{ form_row(form.deleteMainImage) }}
            </div>
        </div>

    </div>

    <div class="card-footer">
        <a class="btn btn-primary" href="{{ path('app_support_index') }}">Annuler</a>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
</div>
{{ form_end(form) }}
{% endblock %}